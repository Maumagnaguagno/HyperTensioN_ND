(defdomain counter (

  (:operator (!add-one ?current)
    ; Preconditions
    (
      (at ?current)
    )
    ; Del effects
    (
      (at ?current)
    )
    ; Add effects
    (
      (at (call + ?current 1))
    )
  )

  (:method (count ?goal)
    goal-reached
    ; Preconditions
    (
      (at ?goal)
    )
    ; Subtasks
    nil
    increment
    ; Preconditions
    (
      (at ?current)
    )
    ; Subtasks
    (
      (!add-one ?current)
      (count ?goal)
    )
  )
))