(defdomain jumpmaze (

  (:operator (!jump ?pos ?value ?newpos)
    ; Preconditions
    (
      (at ?pos)
      (tile ?pos ?value)
    )
    ; Del effects
    (
      (at ?pos)
    )
    ; Add effects
    (
      (at ?newpos)
    )
  )

  (:operator (!!visit ?pos)
    ()
    ()
    ((visited ?pos))
  )

  (:method (goto)
    zero
    ; Preconditions
    (
      (at ?pos)
      (tile ?pos 0)
    )
    ; Subtasks
    ()

    right
    ; Preconditions
    (
      (at ?pos)
      (tile ?pos ?value)
      (not (visited ?pos))
    )
    ; Subtasks
    (
      (!jump ?pos ?value (call + ?pos ?value))
      (!!visit ?pos)
      (goto)
    )

    left
    ; Preconditions
    (
      (at ?pos)
      (tile ?pos ?value)
      (not (visited ?pos))
    )
    ; Subtasks
    (
      (!jump ?pos ?value (call - ?pos ?value))
      (!!visit ?pos)
      (goto)
    )
  )
))