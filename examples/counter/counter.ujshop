(defdomain counter (

  (:- (empty_axiom ?var)
    ; Anything but an empty list or nil is true
    negate-empty-list
    (not (and (or ((((((())))))))))
  )

  (:- (at-axiom ?current)
    (not (not (at ?current)))
  )

  (:operator (!add-one ?current)
    ; Preconditions
    (and
      (empty_axiom ?current)
      (at-axiom ?current)
    )
    ; Del effects
    (
      (at ?current)
    )
    ; Add effects
    (
      (at (call + ?current 1))
    )
  )

  (:method (count ?goal)
    goal-reached
    ; Preconditions
    (
      (at ?goal)
    )
    ; Subtasks
    nil
    increment
    ; Preconditions
    (
      (at ?current)
    )
    ; Subtasks
    (
      (!add-one ?current)
      (count ?goal)
    )
  )
))